{% extends 'base.html.twig' %}
{% block title 'admin'%}
{% block body %}
    <div class="container">
        <h1>Gerer les reunions</h1>
        {%  for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        <table class="table table-stripped">
            <thead>
            <tr>
                <th>Titre</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for meeting in meetings %}
                <tr>
                    <td>{{ meeting.title }}</td>
                    <td>
                        <a href="{{ path('admin.meeting.edit', {id: meeting.id}) }}" class="btn btn-secondary">Editez</a>
                        <form method="post" action="{{ path('admin.meeting.delete', {id: meeting.id}) }}" style="display: inline-block" onsubmit="return confirm('Etes-vous sure de vouloir supprimer cette reunion ?')">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ meeting.id)  }}">
                            <button class="btn btn-danger">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="text-right">
            <a href="{{ path('admin.meeting.create') }}" class="btn btn-primary">Cr√©er une nouvelle reunion</a>
        </div>
    </div>
{% endblock %}
