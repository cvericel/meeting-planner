<div id="dataModal" class="modal fade js-modal-meeting-date-form">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="swal2-header">
                <h4 class="modal-title" id="modalLabel">
                    Add meeting date
                </h4>
            </div>
            <div class="modal-body">
                {{ form_start(date_form, {
                    'attr': {
                        'class': 'form-inline js-new-meeting-date-form'
                    }})
                }}
                <div class="form-group">
                    {{ form_widget(date_form.day,{
                            'attr': {
                                'class': 'js-datetime-picker ll-skin-lugo'
                        }})
                    }}
                </div>
                <div class="form-group">
                    {{ form_widget(date_form.start_at,
                        {
                            'attr': {
                                'class': 'js-time-picker ll-skin-lugo'
                            }
                        })
                    }}
                </div>
                    {{ form_widget(date_form.end_at, {
                        'attr': {
                            'class': 'js-time-picker ll-skin-lugo'
                        }
                    }) }}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                <button class="btn btn-primary"> {{ button|default('Enregistrer') }} </button>
            </div>
            {{ form_end(date_form) }}
        </div>
    </div>
</div>



