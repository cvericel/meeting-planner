{% extends 'base.html.twig' %}

{% block title 'Mon compte' %}


{% block body %}
    <div class="container" style="margin-top: 5cm;">
        <div class="row">
            <div class="offset-1 col-10 offset-sm-1 col-sm-10 col-md-10 offset-md-1 col-lg-10 offset-lg-1 col-xl-4 offset-xl-0">
                <div class="pl-md-5">
                    {%  if form.vars.data.imageFilename|default %}
                        <div class="col-md-6 px-0 offset-md-3 offset-xl-0">
                            <div class="card pp-card">
                                <img src="{{ uploaded_asset(form.vars.data.imagePath) | imagine_filter('square150') }}" alt="" width="100%">
                                <h5 class="username">{{ app.user.username }}</h5>
                                <p class="pl-2">{{ app.user.description }}</p>
                                <ul>
                                    <li>
                                        <a href="https://twitter.com/{{ app.user.twitter }}" class="text-black"><i class="fa fa-twitter fa-2x"> </i></a>
                                    </li>
                                    <li>
                                        <a href="#" class="text-black"><i class="fa fa-facebook fa-2x"> </i></a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
            <div class="offset-1 col-10 offset-sm-1 col-sm-10 col-md-10 offset-md-1 col-lg-10 offset-lg-1 col-xl-8 offset-xl-0">
                {{ include('admin/user/__form.html.twig') }}
            </div>
        </div>
    </div>


{% endblock %}