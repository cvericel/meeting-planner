{% extends 'email/email_base.html.twig' %}
{% block content %}
    <spacer size="20"> </spacer>
    <row>
        <columns>
            <p>{{ email.toName }}, une reunion dans à laquelle vous êtes invité va bientot demarer !</p>
        </columns>
    </row>
    <row>
        <columns>
            <p>Reunions a venir de {{ meeting.user.email }} le {{ meeting.chosenDate.day|date('d/m/Y') }} à {{ meeting.chosenDate.startAt|date('H:i') }} jusqu'a {{ meeting.chosenDate.endAt|date('H:i') }}</p>
        </columns>
    </row>
    <row>
        <columns>
            <center>
                <spacer size="20"> </spacer>
                <button href="{{ url('home') }}">Connecte toi sur le site pour plus d'information</button>
                <spacer size="20"> </spacer>
            </center>
        </columns>
    </row>
{% endblock %}
